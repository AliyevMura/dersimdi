@model List<RecentWorks>

@foreach (RecentWorks recentWorks in Model)
{
    <a href="#" class="recent-work card border-0 shadow-lg overflow-hidden">
        <img class="recent-work-img card-img" src="~/assets/img/@recentWorks.ImagePath" alt="Card image">
        <div class="recent-work-vertical card-img-overlay d-flex align-items-end">
            <div class="recent-work-content text-start mb-3 ml-3 text-dark">
                <h3 class="card-title light-300">@recentWorks.Name</h3>
                <p class="card-text">@recentWorks.Description</p>
            </div>
        </div>
    </a>
}
